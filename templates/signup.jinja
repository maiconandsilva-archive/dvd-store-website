{{ render_field(form.address2, "uk-input", "uk-form-danger",
    placeholder=form.address2.label.text|title, value=form.address2.data or "") }}

{% endblock %}


{% block AFTER_FORM_CONTENT %}
<div class="uk-flex uk-flex-column">
    <button class="uk-button uk-button-primary" type="submit">
        SIGN UP        
    </button>

    <a class="uk-link uk-margin-top" href="/signin">
        Alrealdy have an account?
    </a>
 </div>
{% endblock %}

