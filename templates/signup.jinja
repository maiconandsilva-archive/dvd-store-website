{% extends "_authentication.jinja" %}
{% set title = "SIGN UP" %}

{% block TITLE %}{{ title }}{% endblock %}
{% block FORM_TITLE %}{{ title }}{% endblock %}


{% block FORM_CONTENT %}

{{ render_field(form.firstname, "uk-input", "uk-form-danger",
    placeholder=form.firstname.label.text|title, value=form.firstname.data or "") }}
{{ render_field(form.lastname, "uk-input", "uk-form-danger",
    placeholder=form.lastname.label.text|title, value=form.lastname.data or "") }}
{{ render_field(form.more.age, "uk-input", "uk-form-danger",
    placeholder=form.more.age.label.text|title, value=form.more.age.data or "") }}

{{ render_field(form.more.gender, "uk-input", "uk-form-danger",
    placeholder=form.more.gender.label.text|title, value=form.more.gender.data or "") }}

{{ render_field(form.email, "uk-input", "uk-form-danger",
    placeholder=form.email.label.text|title, value=form.email.data or "") }}
{{ render_field(form.phone, "uk-input", "uk-form-danger",
    placeholder=form.phone.label.text|title, value=form.phone.data or "") }}
{{ render_field(form.password, "uk-input", "uk-form-danger",
    placeholder=form.password.label.text|title, value=form.password.data or "") }}

{{ render_field(form.more.country, "uk-input", "uk-form-danger",
    placeholder=form.more.country.label.text|title, value=form.more.country.data or "") }}
{{ render_field(form.zip, "uk-input", "uk-form-danger",
    placeholder=form.zip.label.text|title, value=form.zip.data or "") }}
{{ render_field(form.more.state, "uk-input", "uk-form-danger",
